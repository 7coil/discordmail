extends templates/template.pug

block title
	title #{status} - #{__('name')}

block main
	.container.white-text
		.col-s12.center
			h1 #{status}
			if message
				h4 #{message}
			p #{__('err_suggest')}
			iframe.err-img(src="https://send-me-some.discordmail.com/remove.pdf")
			p: a(href="http://www.scs.stanford.edu/~dm/home/papers/remove.pdf"): i David Mazieres and Eddie Kohler. Get me off Your Fucking Mailing List. New York University, University of California, Los Angeles.
