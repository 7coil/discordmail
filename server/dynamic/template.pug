doctype html

html
	head
		block title
			title #{__('name')}
		block head
		meta(property="og:image" content="/img/DiscordMail.png")
		meta(property="og:title" content="DiscordMail")
		meta(property="og:type" content="website")
		meta(property="og:description" content="The Discord to E-Mail Bot, powered by Mailgun")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css")
		link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
		link(rel="stylesheet" href="/css/discordmail.css")
		link(rel="icon" type="image/png" href="/img/favicon.png")
		link(rel="shortcut icon" type="image/png" href="/img/favicon.png")
	body.dgrey
		nav.burple.icon
			.nav-wrapper
				.brand-logo.center
					a(href="/") #{__('name')}
				a.button-collapse(href="#" data-activates="slide-out")
					i.material-icons menu
		main
			block main
		footer.page-footer.dark.grey-text
			.container
				.row
					.col.s12
						p.grey-text.text-lighten-4
							ul
								li: a(href="/docs") #{__('documentation')}
								li: a(href="/docs/terms") #{__('tos')}
								li: a(href="/docs/privacy") #{__('pa')}
								li: a(href="/url/github" target="_blank") #{__('github')}
								li: a(href="https://moustacheminer.com/" target="_blank") #{__('mss')}
								li: a(href="/lang") #{__('footer_lang')}
			.footer-copyright.dblack
				.container
					ul
						li #{__('footer_copyright')}
						li #{__('footer_disclaimer')}
		ul.side-nav#slide-out
			if user
				li: a(href="#") #{user.username}##{user.discriminator}
				if user.dmail
					li: a(href="mailto:" + encodeURIComponent(`${user.dmail.email}@${domain}`)) #{user.dmail.email}@#{domain}
					li: a(href="/mail") #{__('nav_emails')}
				li: a(href="/auth/logout") #{__('nav_logout')}
			else
				li: a(href="/auth" target="_blank") #{__('nav_login')}
			li: a(href="/docs/terms") #{__('tos')}
		block scripts
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/js/materialize.min.js")
		script(src="/js/init.js")
		script(async src="https://www.googletagmanager.com/gtag/js?id=UA-67900801-4")
		script
			| window.dataLayer = window.dataLayer || [];
			| function gtag(){dataLayer.push(arguments);}
			| gtag('js', new Date());
			| gtag('config', 'UA-67900801-4');

